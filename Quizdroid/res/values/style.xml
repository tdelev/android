<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="QuizdroidTheme"
        parent="@android:style/Theme.Light">

    </style>

    <style
        name="QuizItemText">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textSize">24sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:layout_marginLeft">6dip</item>

    </style>
    <style
        name="QuizItemDate">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textSize">16sp</item>
        <item
            name="android:layout_marginLeft">6dip</item>
    </style>
    <style
        name="QuestionText"
        parent="android:style/Widget.TextView">
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:padding">4dip</item>
        <item
            name="android:background">@drawable/red_gradient</item>
    </style>
    <style
        name="ListItemAnswer"
        parent="android:style/Widget.TextView">
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:padding">4dip</item>
    </style>
    <style
        name="DialogText"
        parent="android:style/Widget.TextView">
        <item
            name="android:textColor">#fff</item>

        <item
            name="android:textSize">16sp</item>
        <item
            name="android:layout_marginTop">6dip</item>
        <item
            name="android:textStyle">bold</item>
    </style>
    <style
        name="DialogLabel"
        parent="android:style/Widget.TextView">
        <item
            name="android:textColor">#ccc</item>
        <item
            name="android:textSize">14sp</item>
        <item
            name="android:layout_marginTop">6dip</item>
    </style>
</resources>
