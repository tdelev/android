<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="dict"
        android:title="@string/dictionary"
        android:summary="@string/choose_dictionary"
        android:entries="@array/dict_choices_entries"
        android:entryValues="@array/dict_choices_entryvalues"
        android:dialogTitle="@string/choose_dictionary"
        android:defaultValue="MK" />

    <ListPreference
        android:key="boardSize"
        android:title="@string/board_size"
        android:summary="@string/board_size_summary"
        android:entries="@array/board_size_choices_entries"
        android:entryValues="@array/board_size_choices_entryvalues"
        android:defaultValue="16"
        android:dialogTitle="@string/board_size_summary" />

    <ListPreference
        android:key="maxTimeRemaining"
        android:title="@string/time_limit"
        android:summary="@string/time_limit_summary"
        android:entries="@array/time_limit_choices_entries"
        android:entryValues="@array/time_limit_choices_entryvalues"
        android:dialogTitle="@string/time_limit_summary"
        android:defaultValue="180" />

    <CheckBoxPreference
        android:key="soundsEnabled"
        android:title="@string/enable_sounds"
        android:summary="@string/enable_sounds_summary"
        android:defaultValue="true" />


</PreferenceScreen>
