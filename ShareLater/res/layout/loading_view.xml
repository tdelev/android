<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/loading_view" android:layout_height="fill_parent">

	<TextView android:id="@+id/loading" android:textSize="16sp"
		android:text="@string/saving" android:gravity="center" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_centerInParent="true" />

	<ProgressBar android:id="@+id/pbLoading"
		android:layout_toLeftOf="@+id/loading" android:layout_marginBottom="-10dip"
		android:layout_alignBottom="@+id/loading" android:indeterminate="true"
		android:layout_marginRight="10dip" android:layout_height="40dip"
		android:layout_width="40dip"></ProgressBar>


</RelativeLayout>
