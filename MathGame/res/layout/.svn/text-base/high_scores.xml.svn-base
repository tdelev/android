<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.tb.flags"
    android:background="@drawable/bg_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/tvHighScores"
        style="@style/TopText"
        android:text="@string/high_scores"
        android:layout_marginTop="16dip"
        android:layout_centerHorizontal="true"></TextView>
    <ListView
        android:id="@+id/scores_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:layout_marginBottom="54dip"
        android:cacheColorHint="#00000000">
    </ListView>
    <TextView
        android:id="@+id/no_high_scores"
        android:text="@string/no_high_scores"
        style="@style/CounterText"
        android:layout_centerInParent="true" />
