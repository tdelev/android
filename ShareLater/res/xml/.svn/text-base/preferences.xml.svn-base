<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference android:key="dict" android:title="Речник"
		android:summary="Избери речник" android:entries="@array/dict_choices_entries"
		android:entryValues="@array/dict_choices_entryvalues"
		android:dialogTitle="Избери речник" android:defaultValue="MK" />

	<ListPreference android:key="boardSize" android:title="Редици/Колони (NxN)"
		android:summary="Избери големина на табла" android:entries="@array/board_size_choices_entries"
		android:entryValues="@array/board_size_choices_entryvalues" android:defaultValue="16"
		android:dialogTitle="Избери големина на табла" />

	<ListPreference android:key="maxTimeRemaining"
		android:title="Времетраење" android:summary="Избери временски лимит"
		android:entries="@array/time_limit_choices_entries"
		android:entryValues="@array/time_limit_choices_entryvalues"
		android:dialogTitle="Избери временски лимит" android:defaultValue="180" />

	<CheckBoxPreference android:key="soundsEnabled"
		android:title="Овозможи звуци" android:summary="Дали се овозможени звуци во играта"
		android:defaultValue="true" />


</PreferenceScreen>
