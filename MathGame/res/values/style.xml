<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="MathGameTheme"
        parent="@android:style/Theme.Light">
        <item
            name="android:windowNoTitle">true</item>
    </style>
    <style
        name="ExpressionText">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">48sp</item>
        <item
            name="android:textStyle">bold</item>
    </style>
    <style
        name="TopText">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">22sp</item>
    </style>
    <style
        name="TopTextTime">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">18sp</item>
    </style>
    <style
        name="TopTextInfo">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">26sp</item>
    </style>
    <style
        name="CounterText">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">72sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:gravity">center</item>
    </style>
    <style
        name="NumPadButton"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">90dip</item>
        <item
            name="android:layout_height">60dip</item>
        <item
            name="android:layout_margin">2dip</item>
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">32sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:background">@drawable/button_num</item>
        <!--
            <item name="android:layout_weight">1</item> <item
            name="android:gravity">center</item>
        -->
    </style>
    <style
        name="NumPadButtonOperator"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">70dip</item>
        <item
            name="android:layout_height">60dip</item>
        <item
            name="android:layout_margin">2dip</item>
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">32sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:background">@drawable/button_num</item>
        <!--
            <item name="android:layout_weight">1</item> <item
            name="android:gravity">center</item>
        -->
    </style>
    <style
        name="MainButton"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">180dip</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">24sp</item>
        <item
            name="android:background">@drawable/button_main</item>
        <item
            name="android:paddingLeft">10dip</item>
        <item
            name="android:paddingRight">10dip</item>
        <item
            name="android:paddingTop">8dip</item>
        <item
            name="android:paddingBottom">8dip</item>
        <!--
            <item name="android:layout_weight">1</item> <item
            name="android:gravity">center</item>
        -->
    </style>
    <style
        name="ListItemText"
        parent="android:style/Widget.TextView">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#333</item>
        <item
            name="android:textSize">24sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:layout_marginTop">5dip</item>
        <item
            name="android:layout_marginBottom">15dip</item>
    </style>
</resources>
