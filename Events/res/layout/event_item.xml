<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/header"
        android:text="day of week"
        style="@style/EventItemHeader" />
    <ImageView
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/header"
        android:paddingTop="12dip"
        android:padding="6dip"
        android:id="@+id/icon"></ImageView>
    <TextView
        android:id="@+id/name"
        android:text="name"
        android:layout_marginLeft="42dip"
        android:paddingTop="4dip"
        style="@style/EventItemName"
        android:layout_below="@+id/header" />
    <TextView
        android:id="@+id/atLabel"
        style="@style/EventItemAt"
        android:layout_marginLeft="42dip"
        android:layout_below="@+id/name"
        android:text="@string/at" />
    <TextView
        android:id="@+id/venue_name"
        style="@style/EventItemVenue"
        android:layout_below="@+id/name"
        android:paddingLeft="6dip"
        android:layout_toRightOf="@+id/atLabel" />
    <TextView
        android:id="@+id/time_to_go"
        style="@style/EventItemTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dip"
        android:layout_below="@+id/venue_name" />
    <!--
        <TextView android:id="@+id/distance"
        style="@style/EventItemTime"
        android:layout_below="@+id/time_to_go" />
    -->
</RelativeLayout>
