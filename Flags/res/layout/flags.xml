<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextSwitcher
        android:id="@+id/tsCenter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out"
        android:layout_weight="0">
        <TextView
            android:id="@+id/bs1"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/bs2"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold"></TextView>
    </TextSwitcher>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="56dip"
        android:layout_marginLeft="70dip"
        android:id="@+id/iv1"
        android:onClick="onFlagClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="56dip"
        android:layout_marginRight="70dip"
        android:id="@+id/iv2"
        android:onClick="onFlagClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dip"
        android:layout_marginLeft="70dip"
        android:id="@+id/iv3"
        android:onClick="onFlagClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dip"
        android:layout_marginRight="70dip"
        android:id="@+id/iv4"
        android:onClick="onFlagClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

    <TextSwitcher
        android:id="@+id/tsPoints"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out"
        android:layout_weight="0"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip">
        <TextView
            android:id="@+id/p1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="" />
        <TextView
            android:id="@+id/p2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="" />
    </TextSwitcher>

    <TextView
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="8dip"
        android:layout_width="280dip"></TextView>
    <TextSwitcher
        android:id="@+id/tsBonus"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:inAnimation="@anim/push_top_in"
        android:outAnimation="@anim/push_right_out"
        android:layout_weight="0"
        android:layout_marginRight="6dip"
        android:layout_marginTop="10dip">
        <TextView
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="30sp"></TextView>
        <TextView
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="30sp"></TextView>
    </TextSwitcher>
    <com.tb.flags.TimerBarView
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dip"
        android:id="@+id/timer_view" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:layout_width="58dip"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="6dip"
        android:textStyle="bold"></TextView>
</RelativeLayout>
