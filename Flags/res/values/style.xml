<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="GeoTheme"
        parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    </style>
    <style
        name="MainButton"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">fill_parent</item>
        <item
            name="android:layout_height">fill_parent</item>
        <item
            name="android:textColor">#154583</item>
        <item
            name="android:textSize">20sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:background">@drawable/button_main</item>
        <item
            name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style
        name="SendButton"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">fill_parent</item>
        <item
            name="android:layout_height">fill_parent</item>
        <item
            name="android:background">@drawable/button_send</item>
        <item
            name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style
        name="ClearButton"
        parent="android:style/Widget.Button">
        <item
            name="android:layout_width">fill_parent</item>
        <item
            name="android:layout_height">fill_parent</item>
        <item
            name="android:background">@drawable/button_clear</item>
        <item
            name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style
        name="SoundButton"
        parent="@android:style/Widget.Button.Toggle">
        <item
            name="android:background">@drawable/button_sound_on_off</item>
        <item
            name="android:textOn">""</item>
        <item
            name="android:textOff">""</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">18sp</item>

    </style>
    <style
        name="HighScoreListHeader"
        parent="android:style/Widget.TextView">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">24sp</item>
    </style>

    <style
        name="ListItemText"
        parent="android:style/Widget.TextView">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:textColor">#fff</item>
        <item
            name="android:textSize">32sp</item>
        <item
            name="android:textStyle">bold</item>
        <item
            name="android:layout_marginTop">5dip</item>
        <item
            name="android:layout_marginBottom">15dip</item>
    </style>
</resources>
